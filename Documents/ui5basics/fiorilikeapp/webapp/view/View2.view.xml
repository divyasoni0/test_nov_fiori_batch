<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="emc2.sd.products.controller.View2">
    <Page title="{name}" showNavButton="true" navButtonPress="onBack">
        <content>
            <ObjectHeader title="{name}" intro="{healthBenefits}" number="{price}" 
                          numberUnit="{unit}" icon="{image}"></ObjectHeader>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Save" press="onSave" type="Accept"/>
                <Button text="Cancel" press="onCancel" type="Reject"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>